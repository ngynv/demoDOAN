@model demoDOAN.Models.Customer

@using demoDOAN.Models
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_BeautyLayout.cshtml";
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    var user = Session["Account"] as demoDOAN.Models.Customer;

}


<div class="container detailsUser" style="color: #6f6f6f">
    <div class="" style="padding-right: 60px">
        <div class="" style="display: flex; margin-top: 10px ">
            <i class="fas fa-user-circle" style="font-size: 50px; padding-right: 15px"></i>
            <div class="">
                <p class="textMian" style="margin-bottom: 0;"> @Html.DisplayFor(model => model.NameCus)</p>
                <p class="text-none1" style="margin-bottom: 0; font-size: 14px">
                    <i class="fas fa-pen" style="font-size: 12px"></i>
                    @Html.ActionLink("Chỉnh Sửa", "Edit", new { id = Model.IDCus })
                </p>
            </div>
        </div>
        <hr />
        <div class="">
            <div class="detailsUser-leftItem" style="">
                <i class="fas fa-user"></i>
                <p class="text-none1" style="font-size: 14px; padding-left: 16px"><a href="http://localhost:64657/Customers/Details/4">Tài khoản của tôi</a></p>
            </div>
           
            <div class="detailsUser-leftItem1">
                @if (user != null)
                {
                    //Customer cust = Session["TaiKhoan"] as Customer;
                    <a href="@Url.Action("Logout","Customers")" class="text-none btn-primarys" style="padding: 5px 15px; text-decoration: none; border-radius: 5px; font-weight: 700; font-size: 17px ;background-color:#6f6f6f; color:#fff">Đăng xuất</a>
                }

            </div>

        </div>

    </div>
    <div class="detailsUser-right">
        <h4 style="color: #6f6f6f; font-weight: 700;margin-top:20px">Hồ sơ của tôi</h4>
        <p class="">Quản lý thông tin hồ sơ để bảo mật tài khoản</p>
        <hr />
        <dl class="dl-horizontal" style="color: #6f6f6f">
            <div Class="detailsUser-item">
                <dt class="detailsUser-itemMain">Họ và Tên: </dt>
                <dd>
                    @Html.DisplayFor(model => model.NameCus)
                </dd>
            </div>
            <div Class="detailsUser-item">
                <dt class="detailsUser-itemMain">Số Điện Thoại: </dt>
                <dd>
                    @Html.DisplayFor(model => model.PhoneCus)
                </dd>
            </div>
            <div Class="detailsUser-item">
                <dt class="detailsUser-itemMain">Email: </dt>
                <dd>
                    @Html.DisplayFor(model => model.EmailCus)
                </dd>
            </div>

        </dl>
    </div>
</div>

<style>
    .detailsUser {
        margin-top: 120px;
        margin-bottom: 70px;
        padding-left: 20px;
        display: flex;
        font-family: Arial;
    }

    .detailsUser-item {
        display: flex;
    }

    .detailsUser-itemMain {
        padding-right: 20px;
    }

    .text-none1 a {
        text-decoration: none;
        color: #6f6f6f;
    }

    .textMian {
        color: #333;
        font-weight: 700;
    }

    .detailsUser-right {
        padding: 20px 60px 20px 60px;
        background: #fff;
        box-shadow: 0 1px 2px 0 rgba(0,0,0,.13);
        border-radius: 0.125rem;
        flex: 1;
    }

    .detailsUser-leftItem {
        display: flex;
    }

    .detailsUser-leftItem1 {
    }

    .btn-primarys {
        background-color: #e6e3de;
        color: #6f6f6f;
    }

    .btn-primarys:hover {
        color: #fff !important;
        background-color: #6f6f6f;
        cursor: pointer;
    }
</style>