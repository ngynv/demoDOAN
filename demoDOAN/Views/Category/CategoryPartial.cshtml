@model IEnumerable<demoDOAN.Models.Category>

<style>

    #div-u {
        text-decoration: none;
        padding: 0;
    }

    .div-cate {
        height: 30px;
        width: 100%;

    }

        .div-cate a {
            color: #6f6f6f;;
            text-decoration: none;
            font-size: 15px;
            font-family: Arial, Helvetica, sans-serif;
            margin: 7px 0;
        }

            .div-cate a:hover {
                color: chartreuse;
                text-decoration: none;
            }
        .div-cate a {
            font-size: 15px;
        }
    a:hover {
        color: #000 !important;
    }
</style>
<ul style="list-style-type: none;" id="div-u">
    @{
        foreach (var item in Model)
        {
            <li class="div-cate">
                @Html.ActionLink(item.NameCate, "ProductList", "Sanpham", new { category = item.IDCate }, "")
            </li>
        }
    }

</ul>