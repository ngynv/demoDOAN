@model IEnumerable<demoDOAN.Models.Customer>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <style>
        body {
            margin: 0;
            background-color: #fbfbfb;
        }
        .btn-primarys {
            background-color: #6f6f6f;
            color: #fff;
        }

            .btn-primarys:hover {
                color: #f5f5f5;
                background-color: #6f6f6f;
                cursor: pointer;
            }
        .tablee {
            padding: 25px 35px;
            background-color: #fff;
        }
    </style>
    <div class="header header-pc" style="background-color: #e6e3de; padding: 3px 0">
        <div class="container" style="display: flex; justify-content: center">
            <div class="navbar-left">

            </div>
            <div class="navbar-center">
                <a href="http://localhost:64657/Trangchu/Trangchu"> <img src="~/image/logo-top.png" /></a>

            </div>
            <div class="navbar-right">

            </div>
        </div>
    </div>
    <div class="container" style="margin-bottom: 200px; margin-top: 50px">
        <h4 style="text-align: center; font-size: 30px; text-transform: uppercase">Quản lý tài khoản người dùng</h4>
        <hr />
        <div class="tablee">
            <table class=" table">
                <tr>
                    <th>
                        Tên đăng nhập
                    </th>
                    <th>
                        Số điện thoại
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Mật khẩu
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NameCus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneCus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EmailCus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PassCus)
                        </td>

                        <td>
                            <a href=" @Url.Action("Edit", "AdminCustomers",  new { id = item.IDCus })" class="btn btn-primarys">
                                Chỉnh sửa
                            </a>
                            <a href=" @Url.Action("Details", "AdminCustomers",  new { id = item.IDCus })" class="btn btn-primarys">
                                Chi tiết
                            </a>
                            <a href=" @Url.Action("Delete", "AdminCustomers",  new { id = item.IDCus })" class="btn btn-primarys">
                                Xóa
                            </a>

                        </td>
                    </tr>
                }

            </table>
        </div>
        <div class="form-group" style="display: flex; margin-top: 30px;">
            <div class="col-md-offset-2 col-md-6">
                <a href=" @Url.Action("Index", "AdminProducts")" class="btn btn-primarys">
                    Quay lại
                </a>
            </div>
            <div class="col-md-offset-2 col-md-6" style="display: flex;justify-content: flex-end">
                <a href=" @Url.Action("Create", "AdminCustomers")" class="btn btn-primarys">
                    Thêm tài khoản
                </a>
            </div>
        </div>

    </div>
    <footer class="" style="background-color: #e6e3de; padding: 50px 0"></footer>
</body>
</html>
