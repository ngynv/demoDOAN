@model demoDOAN.Models.Customer

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <style>
        body {
            margin: 0;
        }
        .btn-primarys {
            background-color: #6f6f6f;
            color: #fff;
        }

            .btn-primarys:hover {
                color: #f5f5f5;
                background-color: #6f6f6f;
                cursor: pointer;
            }

        .form1 {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .form-group {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 10px 0;
        }

        .form-control {
            padding: 8px 15px !important;
        }
    </style>
    <div class="header header-pc" style="background-color: #e6e3de; padding: 3px 0">
        <div class="container" style="display: flex; justify-content: center">
            <div class="navbar-left">

            </div>
            <div class="navbar-center">
                <a href="http://localhost:64657/Trangchu/Trangchu"> <img src="~/image/logo-top.png" /></a>

            </div>
            <div class="navbar-right">

            </div>
        </div>
    </div>

    <div class="container" style="margin-bottom: 250px">
        
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal" >
                <h4 style="text-align: center; text-transform: uppercase; margin-top: 50px; font-size: 30px">Thông tin người dùng</h4>
                <hr />

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group" style="margin-top:30px">
                <dt>
                    Tên đăng nhập:
                </dt>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NameCus, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NameCus, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <dt> Số điện thoại: </dt>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PhoneCus, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PhoneCus, "", new { @class = "text-danger" })
                    </div>
            </div>

                <div class="form-group">
                    <dt> Email:</dt>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.EmailCus, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EmailCus, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <dt>Mật khẩu:</dt>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PassCus, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PassCus, "", new { @class = "text-danger" })
                    </div>
                </div>

            </div>

            <div class="form-group" style="margin-top: 30px">
                <div>
                    <a href="@Url.Action("Index", "AdminCustomers")" class="btn btn-primarys">Quay lại</a>
                </div>
                <div class="col-md-offset-2 col-md-10" style="display: flex; justify-content: end">
                    <input type="submit" value="Create" class="btn btn-primarys" />
                </div>
            </div>
        }
    </div>

    <footer class="" style="background-color: #e6e3de; padding: 50px 0"></footer>
</body>
</html>
