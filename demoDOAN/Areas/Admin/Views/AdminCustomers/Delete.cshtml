@model demoDOAN.Models.Customer

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <style>
        .btn-primarys {
            background-color: #6f6f6f;
            color: #fff;
        }

            .btn-primarys:hover {
                color: #f5f5f5;
                background-color: #6f6f6f;
                cursor: pointer;
            }

        .form1 {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .form-group {
            margin: 10px 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
    </style>
    <div class="header header-pc" style="background-color: #e6e3de; padding: 3px 0">
        <div class="container" style="display: flex; justify-content: center">
            <div class="navbar-left">

            </div>
            <div class="navbar-center">
                <a href="http://localhost:64657/Trangchu/Trangchu"> <img src="~/image/logo-top.png" /></a>

            </div>
            <div class="navbar-right">

            </div>
        </div>
    </div>


    <div class="container" style="margin-bottom: 250px">
        <h4 style="text-align: center; text-transform: uppercase; margin-top: 50px; margin-bottom: 13px; font-size: 30px">Thông tin NGƯỜI DÙNG</h4>
        <hr />
        <dl class="dl-horizontal" style="margin-top: 30px">
            <div class="form-group">
                <dt>
                    Tên người dùng:
                </dt>

                <dd class="form-control" style="width: 85%; padding: 8px 15px; cursor: no-drop; min-height: 41.6px">
                    @Html.DisplayFor(model => model.NameCus)

                </dd>
            </div>
            <div class="form-group">
                <dt>
                    Số điện thoại:
                </dt>

                <dd class="form-control" style="width: 85%; padding: 8px 15px; cursor: no-drop; min-height: 41.6px ">
                    @Html.DisplayFor(model => model.PhoneCus)

                </dd>
            </div>
            <div class="form-group">
                <dt>
                    Email:
                </dt>

                <dd class="form-control" style="width: 85%; padding: 8px 15px; cursor: no-drop; min-height: 41.6px">
                    @Html.DisplayFor(model => model.EmailCus)

                </dd>
            </div>
            <div class="form-group">
                <dt>
                    Mật khẩu:
                </dt>

                <dd class="form-control" style="width: 85%; padding: 8px 15px; cursor: no-drop; min-height: 41.6px">
                    @Html.DisplayFor(model => model.PassCus)

                </dd>
            </div>

        </dl>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group" style="display: flex; margin-top: 30px;">
                <div class="col-md-offset-2 col-md-6" style="display: flex;justify-content: flex-start">
                    <a href=" @Url.Action("Index", "AdminCustomers", new { id = Model.IDCus })" class="btn btn-primarys">
                        Quay lại
                    </a>
                </div>
                <div class="col-md-offset-2 col-md-6" style="display: flex;justify-content: flex-end">
                    <input type="submit" value="Xóa" class="btn btn-primarys" />
                </div>
            </div>
        }
            @*@using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-default" /> |
                    @Html.ActionLink("Back to List", "Index")
                </div>
            }*@
        </div>

    <footer class="" style="background-color: #e6e3de; padding: 50px 0"></footer>
</body>
</html>
