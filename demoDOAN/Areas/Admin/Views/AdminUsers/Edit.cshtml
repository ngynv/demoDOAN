@model demoDOAN.Models.AdminUser

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <style>
        .form1 {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .btn-primarys {
            background-color: #6f6f6f;
            color: #fff;
        }

            .btn-primarys:hover {
                color: #f5f5f5;
                background-color: #6f6f6f;
                cursor: pointer;
            }

        .form-group {
            margin: 15px 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .form-control {
            padding: 8px 15px;
        }
    </style>
    <div class="header header-pc" style="background-color: #e6e3de; padding: 3px 0">
        <div class="container" style="display: flex; justify-content: center">
            <div class="navbar-left">

            </div>
            <div class="navbar-center">
                <a href="http://localhost:64657/Trangchu/Trangchu"> <img src="~/image/logo-top.png" /></a>

            </div>
            <div class="navbar-right">

            </div>
        </div>
    </div>

    <div class="container" style="margin-bottom: 250px">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal" style="margin-top: 45px">
                <h4 style="text-align: center; font-size: 30px; text-transform: uppercase">Chỉnh sửa thông tin quản trị viên</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ID)

                <div class="form-group" style="margin-top: 30px">
                    <dt>Tên đăng nhập:</dt>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NameUser, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NameUser, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <dt>Chức vụ:</dt>

                    <div class="col-md-10">
                        @Html.EditorFor(model => model.RoleUser, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.RoleUser, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <dt>Mật khẩu:</dt>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.PasswordUser, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PasswordUser, "", new { @class = "text-danger" })
                    </div>
                </div>


            </div>
        }

        <div class="form-group" style="display: flex; margin-top: 30px;">
            <div class="col-md-offset-2 col-md-6" style="display: flex;justify-content: flex-start">
                <a href=" @Url.Action("Index", "AdminUsers")" class="btn btn-primarys">
                    Quay lại
                </a>
            </div>
            <div class="col-md-offset-2 col-md-6" style="display: flex;justify-content: flex-end">
                <a href=" @Url.Action("Details", "AdminUsers", new {id = Model.ID})" class="btn btn-primarys">
                    Lưu
                </a>
                @*<input type="submit" value="Lưu" class="btn btn-primarys" />*@
            </div>
        </div>
    </div>

    <footer class="" style="background-color: #e6e3de; padding: 50px 0"></footer>
</body>
</html>
