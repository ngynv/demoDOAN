@model IEnumerable<demoDOAN.Models.AdminUser>

@{
    Layout = null;
    <link href="~/Content/StyleSheet.css" rel="stylesheet" />

}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <style>
        body {
            margin: 0;
            background-color: #fbfbfb;
        }
        .btn-primarys {
            background-color: #6f6f6f;
            color: #fff;
        }

            .btn-primarys:hover {
                color: #f5f5f5;
                background-color: #6f6f6f;
                cursor: pointer;
            }

        .form-group {
            margin: 10px 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .btnn a {
            background-color: #6f6f6f;
            color: #fff;
        }
        .main {
            margin-top: 110px;
        }

        .tablee {
            padding: 25px 35px;
            background-color: #fff;
        }
    </style>
    <div class="header header-pc" style="background-color: #e6e3de; padding: 3px 0">
        <div class="container" style="display: flex">
            <div class="navbar-left">

            </div>
            <div class="navbar-center">
                <a href="http://localhost:64657/Trangchu/Trangchu"> <img src="~/image/logo-top.png" /></a>

            </div>
            <div class="navbar-right">

            </div>
        </div>
    </div>

    <div class="container main" style="margin-bottom: 250px">
        <h4 style="text-align: center; text-transform: uppercase; margin-top: 50px; font-size: 30px">Quản lý tài khoản Admin</h4>
        <hr />
        <div class="tablee">
            <table class="table">
                <tr>
                    <th>
                        Tên đăng nhập
                    </th>
                    <th>
                        Vai trò
                    </th>
                    <th>
                        Mật khẩu
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NameUser)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RoleUser)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PasswordUser)
                        </td>
                        <td>
                            <a href=" @Url.Action("Edit", "AdminUsers",  new { id = item.ID })" class="btn btn-primarys">
                                Chỉnh sửa
                            </a>
                            <a href=" @Url.Action("Details", "AdminUsers",  new { id = item.ID })" class="btn btn-primarys">
                                Chi tiết
                            </a>
                            <a href=" @Url.Action("Delete", "AdminUsers",  new { id = item.ID })" class="btn btn-primarys">
                                Xóa
                            </a>

                        </td>
                    </tr>
                }

            </table>


        </div>
        <div class="form-group" style="display: flex; margin-top: 30px;">
            <div class="col-md-offset-2 col-md-6">
                <a href=" @Url.Action("Index", "AdminProducts")" class="btn btn-primarys">
                    Quay lại
                </a>
            </div>
            <div class="col-md-offset-2 col-md-6" style="display: flex;justify-content: flex-end">
                <a href=" @Url.Action("Create", "AdminUsers")" class="btn btn-primarys">
                    Thêm tài khoản
                </a>
            </div>
        </div>
    </div>

    <footer class="" style="background-color: #e6e3de; padding: 50px 0"></footer>
</body>
</html>
